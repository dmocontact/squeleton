{# src/Site/SiteBundle/Resources/views/Default/contact.html.twig #}
{% extends 'SiteSiteBundle:Default:layout.html.twig' %}

{% block title %}Squeleton - Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact squeleton</h1>
    </header>
    
    {% if app.session.hasFlash('blogger-notice') %}
	    <div class="blogger-notice">
	        {{ app.session.flash('blogger-notice') }}
	    </div>
	{% endif %}
    
    <p>Want to contact symblog?</p>

    <form action="{{ path('SiteSiteBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
    
{% endblock %}